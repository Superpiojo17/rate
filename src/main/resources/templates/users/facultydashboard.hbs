			<!-- Banner -->
			<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" id="facultyDash">
</div>
 <p> </p>

   
  
<section id="main" class="wrapper">
			<div class="leftcol"> 
			
			<!-- Button trigger modal -->
 <br>
			&nbsp;
     <p><h4 id="date"></h4></p>
     <p><h4 id="hour"></h4></p>
      <a href="#announcement" class="btn btn-info" data-toggle="collapse">Announcements</a>
  <div id="announcement" class="collapse">
  &nbsp;
							<div class="table-wrapper">
								<table class="alt">
									<thead>
										<tr>
											<th>Date</th>
											<th>Description</th>
										</tr>
									</thead>
									<tbody>
									{{#each announcements}}
										<tr>
											<td>{{date}}</td>
											<td>{{{announcement_content}}}</td>
										</tr>
										{{/each}}
									</tbody>
									<tfoot>
										<tr>
											<td colspan="2"></td>
										</tr>
									</tfoot>
								</table>
								
							</div>
							
							
						</section>
							<div class="centercol"> 
							&ensp;
							<h2> Welcome {{current_user.first_name}}</h2> 
							<h6> You are logged in as a Faculty member</h6>
							&ensp;
							
  <p>Click on the headings below to view your relevant information.</p>
  <div class="panel-group" id="accordion">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">
          <a data-toggle="collapse" data-parent="#accordion" href="#collapse1">My Tutors</a>
        </h4>
     
      </div>
      <div id="collapse1" class="panel-collapse collapse in">
        <div class="panel-body">
        {{#if tutorFlag}}
        	<div class="table-wrapper">
								<table class="alt">
									<thead>
										<tr>
											<th><br>Tutor </th>
											<th><br>Email</th>
											<th><br>Course</th>
										</tr>
									</thead>
									<tbody>
									{{#each tutors}}
										<tr>
											<td>{{tutor_last_name}}, {{tutor_first_name}} </td>
											<td>{{tutor_email}} </td>
											<td>{{course_name}}</td>
										</tr>
									{{/each}}
									</tbody>
									<tfoot>
									</tfoot>
								</table>
								{{/if}}
								 {{#unless tutorFlag}}You have no tutors, go to Manage Tutors to add tutors.{{/unless}}
        </div>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">
          <a data-toggle="collapse" data-parent="#accordion" href="#collapse2">My Classes</a>
        </h4>
      </div>
      <div id="collapse2" class="panel-collapse collapse">
        <div class="panel-body">
        	
        	{{#if tutorFlag}}
        <div class="table-wrapper">
								<table class="alt">
									<thead>
										<tr>
											<th><br>Course</th>
											<th><br>Name</th>
											<th><br>Term</th>
											<th><br>Class List</th>
										</tr>
									</thead>
									<tbody>
									{{#each courses}}
										<tr>
											<td>{{subject}} {{course_number}} </td>
											<td>{{course_name}} </td>
											<td>{{semester}} {{year}}</td>
											<td align = "center" ><a href="/course/{{id}}/profclasslist"><i class="fa fa-list-alt fa-2x" title="View and edit class list" aria-hidden="true"></i></a></td>
										</tr>
									{{/each}}
									</tbody>
									<tfoot>
									</tfoot>
								</table>
								
								{{/if}}
								 {{#unless tutorFlag}}You have no courses.{{/unless}}
        </div></div>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">
          <a data-toggle="collapse" data-parent="#accordion" href="#collapse3">My Recent Reviews</a>
        </h4>
      </div>
      <div id="collapse3" class="panel-collapse collapse">
        <div class="panel-body">
        {{#if reviewsFlag}}
        	<p> These are your 3 most recent reviews</p>
        	
        <div class="table-wrapper">
								<table class="alt">
									<thead>
										<tr>
											<th><br>Course</th>
											<th><br>Overall</th>
											<th><br>Comment</th>
										</tr>
									</thead>
									<tbody>
									{{#each reviews}}
										<tr>
											<td>{{course}} </td>
											<td>{{overall}} / 5</td>
											<td>{{comment}}</td>
										</tr>
									{{/each}}
									</tbody>
									<tfoot>
									</tfoot>
								</table>
								{{/if}}
								 {{#unless reviewsFlag}}You have no recent reviews.{{/unless}}
        </div>
        
        <a href="/professor/{{current_user.id}}/overview"  class="btn btn-info"> Overview
											</a>
        	
        	
        	
        	
        	
        	
        	
        	
        </div>
      </div>
    </div>
  </div> 
</div>
		
			
