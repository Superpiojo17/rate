							<div class="table-wrapper">
								<table class="alt">
									<thead>
										<tr>
											<th>Date</th>
											<th>Description</th>
										</tr>
									</thead>
									<tbody>
									{{#each announcements}}
										<tr>
											<td>{{date}}</td>
											<td>{{{announcement_content}}}</td>
										</tr>
										{{/each}}
									</tbody>
									<tfoot>
										<tr>
											<td colspan="2"></td>
										</tr>
									</tfoot>
								</table>

							</div>


						</section>

							<div class="centercol">
							&ensp;
							<h2> Complete your profile </h2>



  <p>Choose your major and year in school.</p>
  &ensp;

							<!-- Form -->
						<section>
							<form action="//completeprofilestudent/{{current_user.id}}" method="post">

							<div class="table-wrapper">
								<table class="alt">
									<thead>
										<tr>
											<th><br>Name</th>
											<th><br>Role</th>
											<th><br>Major</th>
											<th><br>Year</th>
										</tr>
									</thead>
									<tbody>
										<tr>
											<td>{{current_user.first_name}} {{current_user.last_name}} </td>
											<td>{{current_user.role_string}} </td>
											<td>
												<select name="department" id="department">
    <option value="CMSC">Computer Science</option>
     <option value="Economics">Business</option>
    <option value="Math">Math</option>
    <option value="Music">Music</option>
</select>

											</td>

											<td>
												<select name="year" id="year">
    <option value="1">Freshman</option>
     <option value="2">Sophomore</option>
    <option value="3">Junior</option>
    <option value="4">Senior</option>
</select>

											</td>
										</tr>
									</tbody>
									<tfoot>
									</tfoot>
								</table>
        </div>
        <div class="12u$">
										<ul class="actions">
											<button type="submit" class="btn btn-info"> Save
											<span class="glyphicon glyphicon-floppy-saved"></button>
											&emsp;&emsp;
										</ul>
									</div>

							</form>
						</section>


  </div>
										</ul>
									</div>
									</form>



  							</section>
							</div>








