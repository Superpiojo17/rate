			<!-- Table -->
						<section>
						<br>
							<h3>Comments:</h3>
							<div class="table-wrapper">
								<table class="alt">
									<thead>
										<tr>
											<th><br>Course</th>
											<th><br>Semester</th>
											<th><br>Comment</th>
											<th><br></th>
											<th></th>
										</tr>
									</thead>
									<tbody>
									{{#each courses}}
									{{#if comment}}
									{{#unless comment_removed}}
										<tr>
											<td class = "shrink">{{course}}</td>
											<td class = "shrink">{{semester}} {{year}}</td>
											{{#if comment_flagged}}<td><i>This comment is under review.</i></td>{{/if}}
											{{#unless comment_flagged}}<td>{{comment}}</td>{{/unless}}
											<td class = "shrink">
											{{#unless comment_approved}}
											{{#unless comment_flagged}}
											<form style="margin: 0 0 0 0;" action="/professor/{{prof_id}}/{{display}}" method="post">
											<button title="flag comment as inappropriate" class="btn btn-danger" type="submit" name="course_flagged" value="{{course_id}}"><span class="glyphicon glyphicon-flag"></span></button>
											</form>
											{{/unless}}
											{{/unless}}
											</td>
										</tr>
									{{/unless}}
									{{/if}}
									{{/each}}
									</tbody>
									<tfoot>
									</tfoot>
								</table>
							</div> 
							
				
			
			
			
