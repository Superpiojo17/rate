	<!-- header -->
	<header id="header" class="skel-layers-fixed">
		<h1>
			<a href="/">RateAndReview</a>
		</h1>
		<a href="#nav">Menu</a>

	</header>

	<!-- Nav -->
	<nav id="nav"  class="visible">
	<ul class="links">
					<li><a href="/">Home</a></li>
					
					{{#if user_admin}}
						<li><a href="/admindashboard">My Account</a></li>
					{{/if}}
					{{#if user_professor}}
						<li><a href="/facultydashboard">My Account</a></li>
					{{/if}}
					{{#if user_tutor}}
						<li><a href="/tutordashboard">My Account</a></li>
					{{/if}}
					{{#if user_student}}
						<li><a href="/studentdashboard">My Account</a></li>
					{{/if}}
					
					{{#if user_null}}
						<li><a href="/login">Log In</a></li>
						<li><a href="/register">Register</a></li>
						<li><a href="/activation">Activate Account</a></li>
						<li><a href="/accountrecovery">Forgot Password?</a></li>
					{{/if}}
					
						<li><a href="/teacher">Browse Professors</a></li>
					
