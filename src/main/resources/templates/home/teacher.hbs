					-->
						<li><a href="/logout">Log Out</a></li>
					{{/unless}}
					
					
				</ul>
	</nav>

	<!-- Banner -->
	<section id="banner">

		<h2>
			<i class="fa fa-book fa-2x" aria-hidden="true"></i>

		</h2>

		<!-- <i class="icon fa-diamond"></i> -->
		<h2>Browse Professors</h2>

	</section>




	<section id="main" class="wrapper">
		<div class="leftcol">

			<!-- Button trigger modal -->
			<br> &nbsp;
			<p>
			<h4 id="date"></h4>
			</p>
			<p>
			<h4 id="hour"></h4>
			</p>
			<a href="#announcement" class="btn btn-info" data-toggle="collapse">Announcements</a>
			<div id="announcement" class="collapse">
				&nbsp;


				<div class="table-wrapper">
					<table class="alt">
						<thead>
							<tr>
								<th>Date</th>
								<th>Description</th>
							</tr>
						</thead>
						<tbody>
							{{#each announcements}}
							<tr>
								<td>{{date}}</td>
								<td>{{{announcement_content}}}</td>
							</tr>
							{{/each}}
						</tbody>
						<tfoot>
							<tr>
								<td colspan="2"></td>
							</tr>
						</tfoot>
					</table>

				</div>
	</section>

	<div class="centercol">
		&ensp;
		<h2>View all professors</h2>



		<p>View all the registered professors.</p>
		<p>Click on the professor's name to go to their ratings page.</p>
		&ensp;
  <br/>
  <form action="/teacher" method="GET">
  
  &nbsp;&nbsp;
  <div>
    <input type="text" name="search" placeholder="Search Users..." />
  </div>

</form>

 <div name="error">
						<p style='color: red'>{{error}}</p>
					</div>





		<div class="table-wrapper">
			&nbsp;&nbsp;
			<table id="indextable" class="indextable alt">
				<thead>
					<tr>
						

						<th class="shrink text-left"><a
							href="javascript:SortTable(3,'T');" class="btn btn-default">Image
								</button>
						</a></th>
						<th class=" shrink text-left"><a
							href="javascript:SortTable(1,'T');" class="btn btn-default">Name
								</button>
						</a></th>
						<th class="shrink text-left"><a
							href="javascript:SortTable(2,'T');" class="btn btn-default">Email
								</button>
						</a></th>

						<th class="text-left"><a href="javascript:SortTable(3,'T');"
							class="btn btn-default">Department
								</button>
						</a></th>
						<th class="text-left"><a href="javascript:SortTable(4,'N');"
							class="btn btn-default">Overall Rating
								</button>
						</a></th>


					</tr>
				</thead>
				<tbody>
					{{#each professors}}
					
					<tr>


						
						<td class="shrink text-center"><img src="/images/{{profilepic}}.JPG"  width="55%" height="%55"></td>
						<td class="shrink"><a href="/professor/{{id}}/Overview">{{last_name}} , {{first_name}}</a></td>
						<td class="shrink"><a
							href="mailto:{{email}}?Subject=Rate%20and %20Review"><span
								class="glyphicon glyphicon-envelope"></span> {{email}}</a></td>

						<td class="shrink">{{major}}</td>

<td class="shrink">{{overall}}</td>




					</tr>
					{{/each}}
				</tbody>
				<tfoot>

				</tfoot>
			</table>
			<nav aria-label="Page navigation example">
				<ul class="pagination justify-content-center">
					<li class="page-item disabled"><a class="page-link" href="#"
						tabindex="-1">Previous</a></li>
					<li class="page-item"><a class="page-link" href="#">1</a></li>
					<li class="page-item"><a class="page-link" href="#">2</a></li>
					<li class="page-item"><a class="page-link" href="#">3</a></li>
					<li class="page-item"><a class="page-link" href="#">Next</a></li>
				</ul>
			</nav>
			
			<a href="/teacher"  class="btn btn-info"> View All
											</a>
		</div>

		</section>





